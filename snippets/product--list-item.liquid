<a
  class="product--list-item"
  href="{{ product.url }}"
  aria-label="{{ product.title }}"
  data-product-item
>
  <div class="product--list-item--wrapper">
    <div class="product--list-item--image">
      {%- liquid
        if product.featured_media.preview_image
          render "image", image: product.featured_media.preview_image
        else
          render "placeholder", type: 'product', aspect_ratio: 1, placeholder_index: 1
        endif
      -%}
    </div>

    <div class="product--list-item--info">
      <div data-item="paragraph">
        {{- product.title -}}
      </div>

      {%- render 'product--item-price', product: product -%}
    </div>

    {%- render 'product--quick-add', product: product -%}
  </div>
</a>