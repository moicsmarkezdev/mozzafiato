<!-- Swiper CSS y JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer="defer"></script>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>


<!-- Slider main container -->
<div class="slider-video-product-container"> 
  <div class="swiper slider-video-product-wrapper {{ section.settings.custom_class }}">
    {% if section.settings.show_arrows and section.blocks.size > 1 %}
     <div class="swiper-buttons-controls">
       <div class="swiper-button-prev m-slider-controls__button">
         <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
       </div>
       <div class="swiper-button-next m-slider-controls__button">
         <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
       </div>
     </div>
    {% endif %} 
    <div class="swiper-wrapper slider-video-product-block">
      {% for block in section.blocks %}   
        <div class="swiper-slide">       
          {% assign video_desktop = block.settings.video_desktop_slider_custom.sources %}
          <!-- Video Desktop -->
          <video autoplay muted loop playsinline class="slider-video-product-inner">
            {% for src in video_desktop %}
              {% if src.format == 'mp4' %}
                <source src="{{ src.url }}">
              {% endif %}
            {% endfor %}
          </video>
          {%- liquid
  assign add_to_cart_t = 'products.add_to_cart' | t
  assign price_t = 'sections.onboarding.price' | t

  assign product = all_products[section.settings.featured_product]

  assign bg_color = section.settings.background-color
  assign container_width = section.settings.container-width
  assign current_variant = product.selected_or_first_available_variant
  assign media_gap = section.settings.media-gap
  assign product_id = product.id | append: '-' | append: section.id
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign text_alignment = section.settings.text-alignment
  assign text_column_width = section.settings.text-column-width
  assign thumbnail_width = section.settings.thumbnail-width
  assign unique_handle = 'featured--' | append: section.id
  assign video_looping_enabled = section.settings.loop-enabled

  if section.settings.featured_product != blank
    assign onboarding = false
  else
    assign onboarding = true
    assign currencies_using_comma_decimals = 'ANG,ARS,BRL,BYN,BYR,CLF,CLP,COP,CRC,CZK,DKK,EUR,HRK,HUF,IDR,ISK,MZN,NOK,PLN,RON,RUB,SEK,UYU,VES,VND' | split: ','
    if currencies_using_comma_decimals contains cart.currency.iso_code
      assign price_t = price_t | replace: '.', ','
    endif
  endif

  capture css_vars
    echo '--text-column-width:' | append: text_column_width | append: '%;'
    echo '--media-gap:' | append: media_gap | append: 'px;'
    echo '--thumbnail-width:' | append: thumbnail_width | append: 'px;'
  endcapture

  render 'section-assets', name: 'featured-product', type: 'style'
-%}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .slider-video-product-container {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .slider-video-product-inner {
    width: 100%;
  }
</style>

<!-- Swiper Initialization -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".slider-video-product-wrapper", {
      loop: true,
      breakpoints: {
        // MÃ“VIL: 0 a 767
        0: {
          slidesPerView: 1.35,  
          centeredSlides: true,
          spaceBetween: 20
        },
        // TABLET: 768 a 1023
        768: {
          slidesPerView: 2.35,
          centeredSlides: true,
          spaceBetween: 24
        },
        // DESKTOP: 1024 
        1024: {
          slidesPerView: 4.35,
          centeredSlides: true,
          spaceBetween: 28
        }
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev"
      }
    });
  });
</script>

{% schema %}
{
  "name": "Slider video + product",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "default": true,
      "label": "Off/On Controls"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom classes"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Video + product",
      "settings": [
        {
          "type": "video",
          "id": "video_desktop_slider_custom",
          "label": "Video"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Producto relacionado"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Slider video + product",
      "category": "Custom"
    }
  ]
}
{% endschema %}
